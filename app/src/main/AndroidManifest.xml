<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.noties.scrollable.sample"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--used for WebView-->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:fullBackupContent="false"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.SampleListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.pager.fragment.FragmentPagerActivity"/>
        <activity android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.overscroll.custompullrefresh.CustomOverScrollActivity"/>
        <activity android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.swiperefresh.SwipeRefreshActivity"/>
        <activity android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.manual.ManualControlActivity"/>
        <activity android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.scrollheader.ScrollHeaderActivity"/>
        <!--<activity android:name="scrollable.noties.ru.scrollableview.ru.noties.scrollable.sample.colorful.ColorfulActivity"/>-->

    </application>

</manifest>
